{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES6"],
    "jsx": "react-native",
    "module": "ES6",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
